void clear_screen():
    if SCREEN_LOCK == 0:
    {
        A = IO_DISPLAY_START+4799;
        for i = A; i >= IO_DISPLAY_START; i--:
        {
            OS_mwrite(0, i);
        }

        LINE = 0;
        COLUMN = 0;
    }
